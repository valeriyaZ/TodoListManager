<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".TodoListManagerActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffffff"
        android:baselineAligned="true"
        android:weightSum="1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtNewItem"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            android:elegantTextHeight="true"
            android:background="#28c0e660"
            android:layout_margin="15dp" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:id="@+id/lstTodoItems"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:background="#2be9e9e9"
            android:layout_weight="0.29"
            android:choiceMode="singleChoice"
            android:nestedScrollingEnabled="true" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:text="+ Add"
            android:id="@+id/menuItemAdd"
            android:layout_marginTop="15dp"
            android:enabled="true"
            android:textAlignment="center"
            android:shadowColor="#44ffffff"
            android:textStyle="bold"
            android:background="#769f1900" />
    </LinearLayout>

</RelativeLayout>
